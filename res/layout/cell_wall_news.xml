<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
	<com.loopj.android.image.SmartImageView 
	    android:id="@+id/iv_title"
	    android:layout_width="100dp"
	    android:layout_height="100dp"
	    android:layout_centerInParent="true"
	    android:layout_alignParentLeft="true"
	    android:layout_marginLeft="5dp"
	    android:scaleType="centerCrop"
	    android:src="@drawable/ic_launcher"/>
	
	<TextView 
	    android:id="@+id/tv_title"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/iv_title"
	    android:layout_marginLeft="5dp"
	    android:layout_alignTop="@id/iv_title"
	    android:layout_marginTop="5dp"
	    android:maxLines="2"
	    android:textColor="#000"
	    android:textSize="18sp"
	    android:gravity="center_vertical"
	    android:text="新闻标题不能太长否则就超过字数了你说是不是啊"/>
	
	<TextView 
	    android:id="@+id/tv_summary"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/tv_title"
	    android:layout_alignLeft="@id/tv_title"
	    android:layout_alignRight="@id/tv_title"
	    android:layout_alignBottom="@id/iv_title"
	    android:maxLines="2"
	    android:textColor="#696969"
	    android:textSize="15sp"
	    android:gravity="center_vertical"
	    android:text="摘要内容摘要内容摘要内容摘要内容摘要内容摘要内容摘要内容摘要内容摘要内容摘要内容摘要内容"/>
</RelativeLayout>
